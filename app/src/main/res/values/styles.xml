<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.button.orange" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background_orange</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="AppTheme.button.purple" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_background_purple</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
